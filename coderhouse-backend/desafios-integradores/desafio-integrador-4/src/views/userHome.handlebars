<h1>User Home</h1>
<button id="logout">Logout</button>
<div class="container">
  <div class="info-prod">
    <h1>List of products</h1>
    <div class="detail-prod">
      <div id="product-container">
        <ul>
          {{#each products}}
            <li>
              <strong>{{this.description}}</strong><br />
              Price: ${{this.price}}<br />
              Stock:
              {{this.stock}}<br />
              Category:
              {{this.category}}<br />
              <button>Agregar</button>
            </li>
          {{/each}}
        </ul>

      </div>
    </div>
  </div>
  <div class="form">
    <h1>CHAT User</h1>
    <form id="email-form">
      <input type="hidden" id="product-id" name="productId" />
      <div class="inputs">
        <div>
          <input
            type="email"
            id="email"
            autocomplete="off"
            placeholder="Enter your email"
            required
          />
        </div>
        <div>
          <textarea
            id="comment"
            autocomplete="off"
            placeholder="Enter your comment"
            required
            rows="4"
            cols="50"
          ></textarea>
        </div>
      </div>
      <div class="button-send">
        <button type="submit" id="button-sender">Enviar</button>
      </div>
    </form>
  </div>
</div>

<script>
  document.getElementById('logout').addEventListener('click', cerrarSesion);
  function cerrarSesion() { localStorage.removeItem("token");
  window.location.href = '/'; }
</script>
<script src="/socket.io/socket.io.js"></script>
<script src="/mail.js"></script>